<div id="<%= dom_id product %>" class="text-start">
  <div class="row flex-lg-row-reverse align-items-center g-5 py-3">
    <div class="col-10 col-sm-8 col-lg-6 text-center">
      <img class="d-block mx-lg-auto img-fluid" alt="Picture of <%= product.name %>" loading="lazy">
    </div>
    <div class="col-lg-6">
      <h3 class="display-7 fw-bold lh-3 mb-3"> <%= product.name %></h3>
      <p class="lead"><%= product.description %></p>
    </div>
  </div>
</div>
